<div class="row">
    <div class="col-md-12">
        <h2>Categories</h2>
        {{#if categories}}
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Category ID</th>
                    <th>Category Name</th>
                </tr>
            </thead>
            <tbody>
                {{#each categories}}
                <tr>
                    <td>{{id}}</td>
                    <td>{{category}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        {{else}}
        <p>No categories available.</p>
        {{/if}}
    </div>
</div>
